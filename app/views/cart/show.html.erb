<h1>Your Cart, <%= current_user.username %></h1>

<% if @cart.cart_items.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @cart.cart_items.each do |item| %>
        <tr>
          <td><%= link_to item.product.name, product_path(item.product) %></td>
          <td><%= number_to_currency(item.product.price) %></td>
          <td>
            <%= form_with url: cart_path, method: :patch, local: true do |f| %>
              <%= f.hidden_field :cart_item_id, value: item.id %>
              <%= f.number_field :quantity, value: item.quantity, min: 1, class: 'form-control' %>
              <%= f.submit 'Update', class: 'btn btn-secondary btn-sm mt-2' %>
            <% end %>
          </td>
          <td><%= number_to_currency(item.product.price * item.quantity) %></td>
          <td>
            <%= link_to 'Remove', remove_cart_path(item.id), method: :delete, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-4">
    <h3>Cart Total: <%= number_to_currency(@cart_total) %></h3>
    <%= link_to 'Checkout', checkout_cart_path, class: 'btn btn-primary' %>
  </div>
<% else %>
  <p>Your cart is empty.</p>
<% end %>
