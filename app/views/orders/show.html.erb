<!-- app/views/orders/show.html.erb -->
<main class="container my-4">
  <h2>Order Details</h2>

  <p><strong>Order Number:</strong> <%= @order.id %></p>
  <p><strong>Street Address:</strong> <%= @order.address_street || 'Not specified' %></p>
  <p><strong>City:</strong> <%= @order.address_city || 'Not specified' %></p>
  <p><strong>State:</strong> <%= @order.address_state || 'Not specified' %></p>
  <p><strong>Zip Code:</strong> <%= @order.address_zip_code || 'Not specified' %></p>
  <p><strong>Province:</strong> <%= @order.province %></p>
  <p><strong>Subtotal:</strong> <%= number_to_currency(@order.subtotal) %></p>
  <p><strong>GST:</strong> <%= number_to_currency(@order.gst) %></p>
  <p><strong>PST:</strong> <%= number_to_currency(@order.pst) %></p>
  <p><strong>HST:</strong> <%= number_to_currency(@order.hst) %></p>
  <p><strong>Total:</strong> <%= number_to_currency(@order.total_price) %></p>

  <h3>Items in Your Order</h3>
  <ul class="list-unstyled">
    <% @order.order_items.each do |item| %>
      <li>
        <strong><%= item.product.name %></strong> - 
        <%= item.quantity %> x <%= number_to_currency(item.product.price) %>
      </li>
    <% end %>
  </ul>

  <div class="mt-4">
    <%= link_to 'Back to Orders', orders_path, class: 'btn btn-primary' %>
    <%= link_to 'Continue Shopping', root_path, class: 'btn btn-secondary' %>
  </div>
</main>
