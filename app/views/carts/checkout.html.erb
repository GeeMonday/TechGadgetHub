<h1>Checkout</h1>

<% if @cart.cart_items.any? %>
  <h2>Order Summary</h2>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <% @cart.cart_items.each do |item| %>
        <tr>
          <td><%= item.product.name %></td>
          <td><%= item.quantity %></td>
          <td><%= number_to_currency(item.product.sale_price || item.product.price) %></td>
          <td><%= number_to_currency(item.quantity * (item.product.sale_price || item.product.price)) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h3>Subtotal: <%= number_to_currency(@cart.calculate_total) %></h3>

  <h2>Shipping Information</h2>
# <%= form_with url: complete_checkout_cart_path, method: :post, local: true, data: { turbo: false } do |f| %>
    <%= debug f %> <!-- Add this line to inspect form details -->
    <div>
      <%= f.label :street, 'Street' %>
      <%= f.text_field :street, value: current_user.address&.street %>
    </div>
    <div>
      <%= f.label :city, 'City' %>
      <%= f.text_field :city, value: current_user.address&.city %>
    </div>
    <div>
      <%= f.label :province_id, 'Province' %>
      <%= f.select :province_id, options_from_collection_for_select(@provinces, :id, :name, current_user.address&.province_id) %>
    </div>
    <div>
      <%= f.label :postal_code, 'Postal Code' %>
      <%= f.text_field :postal_code, value: current_user.address&.postal_code %>
    </div>

    <%= f.submit 'Place Order' %>
  <% end %>
<% else %>
  <p>Your cart is empty.</p>
<% end %>
